<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/radius_10dp"
    tools:context=".activity.language.LanguageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O'zingizga maqul tilni tanlang"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_uz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/flag_uz"
            android:paddingVertical="24dp"
            android:text="O`zbek"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_24sp"
            />

        <View
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:lines="1"
            android:drawableEnd="@drawable/flag_ru"
            android:drawablePadding="@dimen/padding_margin_30dp"
            android:paddingVertical="24dp"
            android:text="Русски"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_24sp" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/radius_10dp"
        android:backgroundTint="@color/yellow"
        android:drawablePadding="@dimen/padding_margin_30dp"
        android:paddingVertical="@dimen/padding_margin_20dp"
        android:text="Boshlash"
        android:layout_marginHorizontal="@dimen/radius_10dp"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_24sp" />


</androidx.appcompat.widget.LinearLayoutCompat>