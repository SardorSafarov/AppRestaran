<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/radius_10dp"
    tools:context=".activity.language.LanguageActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/o_zinggizga_maqul_tilni_tanlang"
        android:textColor="@color/black"
        android:textSize="@dimen/txt_22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="@dimen/padding_margin_20dp"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_uz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/flag_uz"
            android:elevation="@dimen/padding_margin_30dp"
            android:lines="1"
            android:paddingVertical="14dp"
            android:text="O`zbek"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="@dimen/padding_margin_18dp"
            app:elevation="@dimen/padding_margin_20dp" />

        <View
            android:layout_width="@dimen/padding_margin_30dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_ru"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:drawableEnd="@drawable/flag_ru"
            android:elevation="@dimen/padding_margin_30dp"
            android:lines="1"
            android:paddingVertical="14dp"
            android:text="Pyccки"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:backgroundTint="@color/white"
            app:cornerRadius="@dimen/padding_margin_18dp"
            app:elevation="@dimen/padding_margin_20dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_margin_20dp"
        android:layout_marginTop="@dimen/radius_10dp"
        android:background="@drawable/bg_btn_next"
        android:drawablePadding="@dimen/padding_margin_30dp"
        android:elevation="@dimen/padding_margin_30dp"
        android:gravity="center"
        android:paddingVertical="@dimen/padding_margin_20dp"
        android:text="@string/boshlash"
        android:textColor="@color/black"
        android:textSize="18sp" />


</androidx.appcompat.widget.LinearLayoutCompat>