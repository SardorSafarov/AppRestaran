<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:paddingVertical="@dimen/_20sp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_liner_layout"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bo'lim nomini kiriting"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/txt_24sp"
       android:layout_marginStart="@dimen/_40dp"
        />
    <EditText
        android:id="@+id/edt_departament_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Bo'lim nomi"
        android:paddingStart="@dimen/_16dp"
        android:inputType="textCapSentences"
        android:background="@drawable/bg_liner_layout"
        android:elevation="@dimen/radius_10dp"
        android:layout_marginVertical="@dimen/_20sp"
        android:layout_marginHorizontal="@dimen/_40dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_departament_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_btn_next"
        android:backgroundTint="#fdfc32"
        android:layout_gravity="end"
        android:text="Qo'shish"
        android:textSize="@dimen/_18sp"
        android:textAllCaps="false"
        android:layout_marginBottom="@dimen/radius_10dp"
        android:layout_marginEnd="@dimen/_40dp"
        />


</androidx.appcompat.widget.LinearLayoutCompat>