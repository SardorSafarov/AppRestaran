<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.adminPanel.ui.worker.WorkerFragment">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/yellow"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_16sp"
            android:text="Xodimlar Bo'lmi" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_editor"
            android:gravity="center" />

    </androidx.appcompat.widget.LinearLayoutCompat>



    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="@dimen/padding_margin_20dp"
        android:paddingHorizontal="15dp">

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="#e4e9ed"
            android:background="@drawable/bg_contact_btn"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:elevation="@dimen/padding_margin_20dp" />

        <View
            android:layout_width="@dimen/padding_margin_20dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="#e4e9ed"
            android:background="@drawable/bg_liner_layout"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:elevation="@dimen/padding_margin_20dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:paddingHorizontal="15dp">

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="#e4e9ed"
            android:background="@drawable/bg_liner_layout"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:elevation="@dimen/padding_margin_20dp" />

        <View
            android:layout_width="@dimen/padding_margin_20dp"
            android:layout_height="wrap_content" />

        <com.google.android.material.button.MaterialButton
            app:backgroundTint="#e4e9ed"
            android:background="@drawable/bg_liner_layout"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:elevation="@dimen/padding_margin_20dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>



</androidx.appcompat.widget.LinearLayoutCompat>